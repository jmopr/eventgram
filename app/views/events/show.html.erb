<h1>Event</h1>
<div class="events-wrapper row">
    <div class="event">
      <div class="event-head">
        <div class="name">
          Juan Ortiz
          <div class="image center-block">
            <%= link_to (image_tag @event.photo.url(:medium), class:'img-responsive') %>
            <%= @event.caption %>
            <%= link_to events_path %>
            <div class="text-center edit-links">
              <%= link_to "Cancel", events_path %> | 
              <%= link_to "Edit Post", edit_event_path(@event) %>
            </div>
          </div>
        </div>
      </div>
  </div>
</div>
